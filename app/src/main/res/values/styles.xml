<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.RoundedCornerMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@android:color/black</item>
        <item name="android:layout_marginStart">@dimen/button_marginStart</item>
        <item name="android:layout_marginEnd">@dimen/button_marginEnd</item>
    </style>

    <!-- PROGRESS BAR -->
    <style name="ProgressBar" parent="@android:style/Widget.Material.ProgressBar.Small">
        <item name="android:layout_width">@dimen/margin_x60</item>
        <item name="android:layout_height">@dimen/margin_x60</item>
        <item name="android:visibility">invisible</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@android:color/black</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

    <style name="SearchView" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:queryHint">@string/search_bar_placeholder</item>
        <item name="android:layout_marginEnd">@dimen/margin_x8</item>
        <item name="android:layout_marginStart">@dimen/margin_x8</item>
        <item name="android:layout_marginTop">@dimen/margin_x8</item>
    </style>

    <style name="HeaderDivider" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="HypeChatHeaderTextView" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">40sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">@dimen/margin_x16</item>
        <item name="android:paddingStart">@dimen/margin_x8</item>
        <item name="android:paddingEnd">@dimen/margin_x8</item>
    </style>

    <style name="FacebookButton" parent="AppTheme.RoundedCornerMaterialButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">#3b5998</item>
    </style>

    <style name="CustomTextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Holo</item>
    </style>

    <style name="ItemTextView">
        <item name="android:textSize">@dimen/item_textSize</item>
        <item name="android:layout_marginStart">@dimen/item_marginStart</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ItemImageView">
        <item name="android:layout_width">@dimen/item_imageSize</item>
        <item name="android:layout_height">@dimen/item_imageSize</item>
        <item name="android:layout_marginStart">@dimen/item_marginStart</item>
        <item name="android:layout_marginTop">@dimen/item_marginStart</item>
    </style>

    <style name="ProfileImageView">
        <item name="android:layout_width">@dimen/profile_imageSize</item>
        <item name="android:layout_height">@dimen/profile_imageSize</item>
    </style>

    <style name="ProfileImageButton">
        <item name="android:background">@drawable/rounded_select_picture_button</item>
        <item name="android:layout_width">@dimen/profile_imageSize</item>
        <item name="android:layout_height">@dimen/profile_imageSize</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@android:color/black</item>
    </style>

    <style name="ChatLogSendButton">
        <item name="android:backgroundTint">@android:color/black</item>
        <item name="android:background">@drawable/ic_send_white_24dp</item>
        <item name="android:layout_width">@dimen/chat_log_size</item>
        <item name="android:layout_height">@dimen/chat_log_size</item>
    </style>

    <style name="ChatLogEditText">
        <item name="android:background">@drawable/rounded_textview</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:layout_height">@dimen/chat_log_size</item>
        <item name="android:paddingLeft">@dimen/chat_log_padding_left</item>
    </style>

    <style name="ChatLogFromRowTextView">
        <item name="android:background">@drawable/rounded_textview</item>
        <item name="android:padding">@dimen/chat_log_row_padding</item>
        <item name="android:layout_marginStart">@dimen/chat_log_row_marginStart</item>
        <item name="android:layout_marginTop">@dimen/chat_log_row_marginTop</item>
        <item name="android:maxWidth">@dimen/chat_log_row_maxwidth</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:inputType">text</item>
        <item name="android:backgroundTint">@android:color/black</item>
    </style>

    <style name="ChatLogToRowTextView" parent="ChatLogFromRowTextView">
        <item name="android:background">@drawable/rounded_textview</item>
        <item name="android:layout_marginEnd">@dimen/chat_log_row_marginStart</item>
        <item name="android:backgroundTint">@android:color/white</item>
    </style>

    <style name="FullnameLatestMessageRowTextView">
        <item name="android:layout_marginStart">@dimen/latest_message_row_margin_start</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/latest_message_row_fullname_text_size</item>
    </style>

    <style name="LatestMessageRowTextView">
        <item name="android:layout_marginStart">@dimen/latest_message_row_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/latest_message_row_margin</item>
        <item name="android:layout_marginTop">@dimen/latest_message_row_margin</item>
        <item name="android:textSize">@dimen/latest_message_row_text_size</item>
    </style>

    <style name="LatestMessageRowImageView">
        <item name="android:layout_width">@dimen/latest_message_row_imageSize</item>
        <item name="android:layout_height">@dimen/latest_message_row_imageSize</item>
        <item name="android:layout_marginStart">@dimen/latest_message_row_image_margin_start</item>
        <item name="android:layout_marginBottom">@dimen/latest_message_row_margin</item>
        <item name="android:layout_marginTop">@dimen/latest_message_row_margin</item>
    </style>

    <style name="CustomToolbar" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="ToolbarWithItems" parent="CustomToolbar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:itemBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SearchNotFoundImageView" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/search_icon</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginEnd">70dp</item>
        <item name="android:layout_marginStart">70dp</item>
        <item name="android:layout_marginTop">70dp</item>
    </style>

    <style name="SearchNotFoundTextView" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:text">@string/no_results</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginTop">@dimen/margin_x8</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.TeamsActivity">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:theme="@style/CustomToolbar"
            android:background="@drawable/gradient_background"
            android:minHeight="?attr/actionBarSize"
            app:title="@string/teams_toolbar"
            android:id="@+id/toolbarTeams"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="4dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/teamsRecyclerView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbarTeams"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabNewTeam"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:fabCustomSize="56dp"
            android:layout_gravity="end|bottom"
            android:src="@drawable/ic_add_white_24dp"
            android:backgroundTint="@android:color/black"
            android:layout_margin="16dp"
            android:layout_marginBottom="8dp"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="newTeam"/>
    <ImageView
            style="@style/SearchNotFoundImageView"
            android:id="@+id/noTeamsImageView"
            android:src="@drawable/teams"
            app:layout_constraintTop_toBottomOf="@id/toolbarTeams"
            app:layout_constraintBottom_toTopOf="@id/noTeamsTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            style="@style/SearchNotFoundTextView"
            android:id="@+id/noTeamsTextView"
            android:text="@string/no_teams"
            app:layout_constraintTop_toBottomOf="@id/noTeamsImageView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/noTeamsImageView"
            app:layout_constraintEnd_toEndOf="@+id/noTeamsImageView"/>
    <ProgressBar
            android:id="@+id/teamsProgressBar"
            style="@style/ProgressBar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
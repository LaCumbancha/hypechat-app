<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

    <TextView
            tools:text="@string/register_username_placeholder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/userNameChatSnippetToTextView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/chatSnippetToTextView"/>

    <EditText
            android:text="@string/this_is_a_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:textColor="@android:color/black"
            android:id="@+id/chatSnippetToTextView"
            android:fontFamily="@font/consolas"
            android:backgroundTint="@android:color/darker_gray"
            style="@style/ChatLogToRowTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/userNameChatSnippetToTextView"/>

</androidx.constraintlayout.widget.ConstraintLayout>
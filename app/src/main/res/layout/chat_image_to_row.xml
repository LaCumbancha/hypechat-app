<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

    <TextView
            tools:text="@string/register_username_placeholder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/userNameChatImageToTextView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/chatToImageView"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="@+id/userNameChatImageToTextView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/userNameChatImageToTextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            tools:ignore="ContentDescription"/>

</androidx.constraintlayout.widget.ConstraintLayout>